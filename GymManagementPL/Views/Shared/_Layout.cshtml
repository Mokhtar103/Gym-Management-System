@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Thambi+2:wght@400..800&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <!-- ^ Bootstrap 5.3.8 css file -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- ^ Our main css file -->
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Power fitness | Home</title>
</head>

<body>
    <header>
        <!-- ^ navbar -->
        <nav class="navbar navbar-expand-lg bg-white my-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="./images/logo.jpg" alt="" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav m-auto mb-2 mb-lg-0 mt-3 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-2 fw-bolder fs-5 @(currentController == "Home" ? "active" : "text-black-alternative")"
                            asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-2 fw-bolder fs-5 @(currentController == "Member" ? "active" : "text-black-alternative")"
                               asp-action="Index" asp-controller="Member">Member</a>
                        </li>
						@if (User.IsInRole("SuperAdmin"))
                        {
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-2 fw-bolder fs-5 @(currentController == "Trainer" ? "active" : "text-black-alternative")"
                               asp-action="Index" asp-controller="Trainer">Trainer</a>
                        </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-2 fw-bolder fs-5 @(currentController == "Session" ? "active" : "text-black-alternative")"
                               asp-action="Index" asp-controller="Session">Sessions</a>
                        </li>
                       @if(User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 mx-2 fw-bolder fs-5 @(currentController == "Plan" ? "active" : "text-black-alternative")"
                                   asp-action="Index" asp-controller="Plan">Plans</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-2 fw-bolder fs-5 @(currentController == "Membership" ? "active" : "text-black-alternative")"
                               asp-action="Index" asp-controller="Membership">Memberships</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 mx-2 fw-bolder fs-5 @(currentController == "SessionSchedule" ? "active" : "text-black-alternative")"
                               asp-action="Index" asp-controller="SessionSchedule">Sessions Schedule</a>
                        </li>
                        
                        <li class="nav-item">
                            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                <button type="submit"
                                        class="btn btn-link nav-link px-3 py-2 mx-2 fw-bolder fs-5 text-black-alternative">
                                    Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

      
            
            </main>

        <footer class="mt-5">
            <div class="bar bg-primary-color d-flex py-4 text-white fw-bolder align-items-center">
                <p class="py-0 my-0 overflow-hidden text-nowrap">
                    outdoor & online trainers
                    <img src="../images/star.svg" alt="star icon" /> personal training
                    <img src="../images/star.svg" alt="star icon" /> live classes
                    <img src="../images/star.svg" alt="star icon" /> personal trainers
                    <img src="../images/star.svg" alt="star icon" /> personal training
                </p>
            </div>

            <div class="footer-content my-5">
                <div class="container">
                    <div class="row row-cols-2 row-cols-md-4 g-5">
                        <div class="logo">
                            <div class="inner">
                                <div class="image">
                                    <img src="../images/logo.jpg" alt="our logo" />
                                </div>
                                <p class="fs-18 mt-2">
                                    Push harder, go further. Your <br />
                                    fitness journey starts today!
                                </p>
                            </div>
                        </div>

                        <div class="contact">
                            <h4 class="fw-bolder text-uppercase mb-4">contact us</h4>

                            <ul>
                                <li class="d-flex align-items-center gap-2">
                                    <div class="icon">
                                        <img src="../images/phone icon.jpg" alt="phone icon" />
                                    </div>
                                    <p>+91 123 456 789</p>
                                </li>

                                <li class="d-flex align-items-center gap-2">
                                    <div class="icon">
                                        <img src="../images/message icon.jpg" alt="message icon" />
                                    </div>
                                    <p>info@gmail.com</p>
                                </li>
                            </ul>
                        </div>

                        <div class="time">
                            <h4 class="fw-bolder text-uppercase mb-4">our gym timing</h4>

                            <p>
                                Mon - Fri : 08:00 AM - 10:00 PM <br />Sat - Sun : 08:00 AM -
                                09:00 PM
                            </p>
                        </div>

                        <div class="location">
                            <h4 class="fw-bolder text-uppercase mb-4">our location</h4>

                            <p>
                                2715 Ash Dr. San Jose, South <br />
                                Dakota 83475
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
          

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
